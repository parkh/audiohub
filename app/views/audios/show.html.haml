- model_class = Audio
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:aasm_state) + ':'
  %br
  = @audio.aasm_state
%p
  %strong= model_class.human_attribute_name(:created_at) + ':'
  %br
  = @audio.created_at
%p
  %strong= model_class.human_attribute_name(:updated_at) + ':'
  %br
  = @audio.updated_at
%p
  %strong= model_class.human_attribute_name(:source_file_name) + ':'
  %br
  = @audio.source_file_name
%p
  %strong= model_class.human_attribute_name(:source_content_type) + ':'
  %br
  = @audio.source_content_type
%p
  %strong= model_class.human_attribute_name(:source_file_size) + ':'
  %br
  = @audio.source_file_size
%p
  %strong= model_class.human_attribute_name(:source_updated_at) + ':'
  %br
  = @audio.source_updated_at

= link_to t('.back', :default => t("helpers.links.back")), audios_path, :class => 'btn'
= link_to t('.destroy', :default => t("helpers.links.destroy")), audio_path(@audio), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'